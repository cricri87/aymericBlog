<div class="banner-wrapper">
  <div class="banner-head">
    <div class="container ">
      <div class="max-width-content"><h1>Welcome To Aymerics Blog</h1>
        <p>Follow us true our travell's around the world.</p>
        <% if !user_signed_in? %>
        <%= link_to "S'inscrire", new_user_registration_path, class: 'btn btn-primary btn-banner'  %></div>
        <% end %>
    </div>
  </div>
</div>



<div class="container">
  <div class="article-wrapper text-center">
    <h1>Articles</h1>
    <p><%= link_to "New Article", new_article_path %></p>

    <div class="row">
      <% @articles.each do |article| %>
       <div class="col-sm-12 col-md-4">
         <div class="card">
           <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/cricri87">
            <div class="article-description">
              <h4><%= "#{article.title.capitalize}" %></h4>
              <p><%= article.text %></p>
              <% if  article.photo.present? %>
                <div class="article-photo">
                  <%= cl_image_tag article.photo %>
                  </div>
              <% end %>
            </div>
           <div class="article-links">
            <%= link_to 'Show', article_path(article) %>
             <%= link_to 'Comments', article_path(article) %>
               <%= link_to 'Edit', edit_article_path(article)%>
               <%= link_to 'Delete', article_path(article), method: :delete, data:{confirm: "Are you sure you want to delete this article"} %>

             </div>
           <div class="article-footer">
              <p class="card-created "> This Article was created : <%= article.created_at.strftime(' %b %e %Y') %></p>
           </div>

         </div>
       </div>
      <% end %>
    </div>
  </div>
</div>


