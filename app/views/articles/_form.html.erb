<div class="container">
  <div class="article-form-wrapper">
    <%= simple_form_for @article do |f| %>
      <%= f.input :title %>
      <%= f.input :text %>
      <%= f.button :submit, class: 'btn btn-info' %>
      <%= link_to 'All Articles', articles_path, class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
