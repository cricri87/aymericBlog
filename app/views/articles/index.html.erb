<div class="container">
  <div class="article-wrapper text-center">
    <h1>Articles</h1>
    <p><%= link_to "New Article", new_article_path %></p>

    <div class="row">
      <% @articles.each do |article| %>
       <div class="col-sm-12">
         <div class="card">
           <img class="avatar-large" src="https://kitt.lewagon.com/placeholder/users/cricri87">
            <h4><%= "#{article.title}" %></h4>
            <p><%= article.text %></p>
            <%= link_to 'Show', article_path(article) %>
            <%= link_to 'Edit', edit_article_path(article)%>
            <%= link_to 'Comments', article_path(article) %>
            <%= link_to 'Delete', article_path(article), method: :delete, data:{confirm: "Are you sure you want to delete this article"} %>
            <p class="card-created "> This Article was created : <%= article.created_at.strftime(' %b %e %Y') %></p>

         </div>
       </div>
      <% end %>
    </div>
  </div>
</div>
